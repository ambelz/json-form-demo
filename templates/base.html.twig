                                </div>
                            </div>
                            
                            <!-- Découverte du Bundle -->
                            <div class="mb-3">
                                <h6 class="text-secondary fw-semibold mb-2">
                                    <i class="bi bi-book"></i> Découverte du Bundle
                                </h6>
                                
                                <!-- Possibilités génériques -->
                                <div class="mb-2">
